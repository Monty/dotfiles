# ~/.zsh_aliases: sourced by ~/.shrc
# echo "### .zsh_aliases at `date`"

# Shortcut commands
alias catc='grep -h -e "^[[:space:]]*#" -e ^\;'
alias catn='grep -hv -e ^$ -e "^[[:space:]]*#" -e ^\;'
alias cls='clear'
alias cpr='cp -Rp'
alias df='df -Hl'
alias du='du -sh'
alias hexd="od -a -t x1"
alias hgr='fc -lI 1 -1 | egrep'
alias hgrt='_hgrt' # Search recent history, return last 20 matches
alias hgrz='_hgrz' # Search all history, sort -u matches
alias ht='fc -l'   # Tail history
alias more='less'
alias nv='nvim'
alias od="od -ab"
alias psx='ps -ef | head -1; ps -ef | egrep'
alias sttysane='stty sane; stty iexten erase "^?" kill ^U intr ^C susp ^Z'
if type -p shfmt >/dev/null; then
    alias shf='shfmt -i 4 -s'     # Default shell format
    alias shfl='shfmt -i 4 -s -l' # List files whose formatting would change
    alias shfd='shfmt -d -i 4 -s' # Shell format with diff if file would change
    alias shff='shfmt -f'         # Recursively find all shell files and print the paths
fi

# shortcuts for prettier-eslint
alias pel='prettier-eslint --list-different'
alias pew='prettier-eslint --write'

# shortcuts for rg
alias rgn='rg -N'
alias rgp='rg --sort path'
alias rgpn='rg -N --sort path'

# shortcuts for shellcheck
alias sck='shellcheck $@'
alias scko='shellcheck -o all -e SC2250 $@'
alias sckf='shellcheck -x -P functions $@'

# Kitty commands
alias ktheme='kitty +kitten themes --config-file-name themes.conf'

# TERM number of color settings
alias xt-16='export TERM=xterm'
alias xt-88='export TERM=xterm-88color'
alias xt-256='export TERM=xterm-256color'

# Directory listings
# normal
alias ls='ls $COLOR_AUTO'
alias lsa='ls -A $COLOR_AUTO'
# with special chars to indicate file type
alias l='ls -CF'
alias la='ls -AF'
# If eza is installed
if type -p eza >/dev/null; then
    alias ll='eza --git -s Name --colour=always -lg'
    alias lla='eza --git -s Name --colour=always -lga'
    alias llh='_lwh'                                     # Most recent 20
    alias llt='_lwt'                                     # Today only
    alias llr='eza --git -s Name --colour=always -lgR'   # Recurse
    alias lls='eza --git -s size -r --colour=always -lg' # size
    # Dirs first, then by extension - both without & with gitignored files
    alias lw='eza --git --git-ignore --group-directories-first -s ext --colour=always -lg'
    alias lwg='eza --git --group-directories-first -s ext --colour=always -lg'
else
    alias ll='ls -l $COLOR_AUTO'
    alias lla='ls -lA $COLOR_AUTO'
    alias llh='_llh' # Most recent 20
    alias llt='_llt' # Today only
    alias llr='ls -lR $COLOR_AUTO'
    alias lls='_lls' # size
fi

# ssh shortcuts to various systems
# p m g -- see id_rsa
#
if [[ "$(uname -n)" == *[Ll]ocal ]]; then
    alias ksh-ho='kitty +kitten ssh holmes.local $@'
    alias ssh-ho='ssh monty@holmes.local $@'
    alias ksh-ir='kitty +kitten ssh irene.local $@'
    alias ssh-ir='ssh monty@irene.local $@'
    alias ssh-kvm='ssh monty@Kubuntu-VM.local $@'
    alias ssh-ma='ssh junew@marleau.local $@'
    alias ssh-moj='ssh junew@monarch.local $@'
    alias ssh-mom='ssh monty@monarch.local $@'
    alias ssh-mvm='ssh monty@MojaveVM.local $@'
fi

# Functions
findf() { # Find file by name
    find . -name "$*"
}

finds() { # Find file by initial string in name
    find . -name "$*"\*
}

findw() { # Find words (case insensitive) in files - to check for capitalization typos
    grep -h -o -E '\w+' "$2" | sort -u | grep -i "$1"
}

_hgrt() {
    fc -lI 1 -1 | grep -E "$@" | tail -20
}

_hgrz() {
    fc -lLn 1 -1 | grep -E "$@" | sort -u
}

_llh() {
    ls -lt "$@" | head -20
}

_lwh() {
    eza --git -s date -r --colour=always -lg "$@" | head -20
}

_llt() {
    today=$(date "+%b %e")
    ls -lt "$@" | grep " $today "
}

_lwt() {
    today=$(date "+%e %b")
    eza --git -s date -r --colour=always -lg "$@" | grep "$today "
}

_lls() {
    ls -l "$@" | grep -v ^d | sort -nr --key=5
}

# From various distros
colors() {
    local fgc bgc vals seq0

    printf "Color escapes are %s\n" '\e[${value};...;${value}m'
    printf "Values 30..37 are \e[33mforeground colors\e[m\n"
    printf "Values 40..47 are \e[43mbackground colors\e[m\n"
    printf "Value  1 gives a  \e[1mbold-faced look\e[m\n\n"

    # foreground colors
    for fgc in {30..37}; do
        # background colors
        for bgc in {40..47}; do
            fgc=${fgc#37} # white
            bgc=${bgc#40} # black

            vals="${fgc:+$fgc;}${bgc}"
            vals=${vals%%;}

            seq0="${vals:+\e[${vals}m}"
            printf "  %-9s" "${seq0:-(default)}"
            printf " ${seq0}TEXT\e[m"
            printf " \e[${vals:+${vals+$vals;}}1mBOLD\e[m"
        done
        echo
        echo
    done
}

# end of .zsh_aliases
